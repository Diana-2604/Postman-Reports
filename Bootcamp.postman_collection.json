		{
			"name": "Create booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.collectionVariables.set(\"bookingID\", jsonData.bookingid);",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Check firstname\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.firstname).to.eql(\"Diana\");",
							"});",
							"",
							"pm.test(\"Check lastname\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.lastname).to.eql(\"Brown\");",
							"});",
							"",
							"pm.test(\"Check price\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.totalprice).to.eql(2604);",
							"});",
							"",
							"pm.test(\"Check deposit\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.depositpaid).to.eql(true);",
							"});",
							"",
							"pm.test(\"Check checkin date\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.bookingdates.checkin).to.eql(\"2018-01-01\");",
							"});",
							"",
							"pm.test(\"Check checkout date\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.bookingdates.checkout).to.eql(\"2019-01-01\");",
							"});",
							"",
							"pm.test(\"Check additional needs\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.booking.additionalneeds).to.eql(\"Breakfast\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
